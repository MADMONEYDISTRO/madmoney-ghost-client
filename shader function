	end },

	{ name = "üí≠ Dreamy", func = function()
		clearShaders()
		Instance.new("BlurEffect", Lighting).Size = 10
		local cc = Instance.new("ColorCorrectionEffect", Lighting)
		cc.Brightness = 0.2
		cc.Saturation = 0.5
		cc.TintColor = Color3.fromRGB(255, 180, 255)
	end },

	{ name = "üåÖ Sunset", func = function()
