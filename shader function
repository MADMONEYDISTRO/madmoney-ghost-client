		cc.TintColor = Color3.fromRGB(255, 120, 70)
		cc.Contrast = 0.2
	end },

	{ name = "üé• Cinematic", func = function()
		clearShaders()
		local cc = Instance.new("ColorCorrectionEffect", Lighting)
		cc.Saturation = -0.2
		cc.Contrast = 0.3
	end },

	{ name = "üëì HDR Mode", func = function()
		clearShaders()
		local cc = Instance.new("ColorCorrectionEffect", Lighting)
		cc.Contrast = 0.5
		cc.Brightness = 0.1
		cc.Saturation = 0.3
	end },

	{ name = "üî¶ Night Vision", func = function()
