-- Services
local Players = game:GetService("Players")
local Lighting = game:GetService("Lighting")

local player = Players.LocalPlayer

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ShaderUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 320, 0, 480)
mainFrame.Position = UDim2.new(0.5, -160, 0.5, -240)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 12)

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "üé® Shader Presets"
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.Parent = mainFrame

-- Close Button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.BackgroundColor3 = Color3.fromRGB(100, 20, 20)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 16
closeButton.Parent = mainFrame
Instance.new("UICorner", closeButton).CornerRadius = UDim.new(0, 8)
closeButton.MouseButton1Click:Connect(function()
	screenGui:Destroy()
end)

-- Shader Scroll List
local shaderList = Instance.new("ScrollingFrame")
shaderList.Size = UDim2.new(1, -20, 1, -100)
shaderList.Position = UDim2.new(0, 10, 0, 45)
shaderList.CanvasSize = UDim2.new(0, 0, 0, 0)
shaderList.ScrollBarThickness = 6
shaderList.BackgroundTransparency = 1
shaderList.Parent = mainFrame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 5)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = shaderList

-- Function to clear shaders
local function clearShaders()
	for _, effect in pairs(Lighting:GetChildren()) do
		if effect:IsA("PostEffect") then
			effect:Destroy()
		end
	end
end

-- Shader Definitions
local shaders = {
	{ name = "üîç Blur Vision", func = function()
		clearShaders()
		local blur = Instance.new("BlurEffect", Lighting)
		blur.Size = 24
	end },

	{ name = "üåà Vibrant Colors", func = function()
		clearShaders()
		local cc = Instance.new("ColorCorrectionEffect", Lighting)
		cc.Saturation = 0.4
		cc.Contrast = 0.3
		cc.Brightness = 0.1
	end },

	{ name = "üåò Gloomy", func = function()
		clearShaders()
		local cc = Instance.new("ColorCorrectionEffect", Lighting)
		cc.Saturation = -0.6
		cc.Contrast = -0.2
		cc.TintColor = Color3.fromRGB(80, 80, 100)
	end },

	{ name = "‚òÄÔ∏è Sun Rays", func = function()
		clearShaders()
