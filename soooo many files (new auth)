local TweenService = game:GetService("TweenService")
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local LOADSTRING_CODE = [[
    print("Your loadstring code executed!")
   loadstring(game:HttpGet("https://raw.githubusercontent.com/MADMONEYDISTRO/madmoney-ghost-client/refs/heads/main/yes"))()
]]


local function createRoundedFrame(parent, size, position, bgColor, cornerRadius, shadow)
    local frame = Instance.new("Frame")
    frame.Size = size
    frame.Position = position
    frame.BackgroundColor3 = bgColor
    frame.BorderSizePixel = 0
    frame.AnchorPoint = Vector2.new(0, 0)
    frame.Parent = parent

    local uicorner = Instance.new("UICorner")
    uicorner.CornerRadius = cornerRadius
    uicorner.Parent = frame

    if shadow then
        local shadowFrame = Instance.new("Frame")
        shadowFrame.Size = UDim2.new(1, 8, 1, 8)
        shadowFrame.Position = UDim2.new(0, -4, 0, -4)
        shadowFrame.BackgroundColor3 = Color3.new(0, 0, 0)
        shadowFrame.BackgroundTransparency = 0.85
        shadowFrame.ZIndex = frame.ZIndex - 1
        shadowFrame.Parent = frame

        local shadowCorner = Instance.new("UICorner")
        shadowCorner.CornerRadius = cornerRadius
        shadowCorner.Parent = shadowFrame
    end

    return frame
end


local function createLoadingScreen()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "LoadingScreen"
    screenGui.IgnoreGuiInset = true
    screenGui.ResetOnSpawn = false

    local bg = Instance.new("Frame")
    bg.Size = UDim2.new(1, 0, 1, 0)
    bg.BackgroundColor3 = Color3.fromRGB(18, 18, 25)
    bg.BackgroundTransparency = 0
    bg.Parent = screenGui

    local container = createRoundedFrame(bg, UDim2.new(0.35, 0, 0.12, 0), UDim2.new(0.325, 0, 0.44, 0), Color3.fromRGB(30, 30, 40), UDim.new(0.15, 0), true)
    container.BackgroundTransparency = 1

    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0.5, 0)
    title.Position = UDim2.new(0, 0, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = "Loading..."
    title.Font = Enum.Font.GothamBold
    title.TextSize = 32
    title.TextColor3 = Color3.fromRGB(230, 230, 255)
    title.TextTransparency = 1
    title.Parent = container

    local progressBarBG = createRoundedFrame(container, UDim2.new(0.92, 0, 0.25, 0), UDim2.new(0.04, 0, 0.6, 0), Color3.fromRGB(45, 45, 60), UDim.new(0.5, 0))
    progressBarBG.BackgroundTransparency = 0.2

    local progressBar = Instance.new("Frame")
    progressBar.Size = UDim2.new(0, 0, 1, 0)
    progressBar.Position = UDim2.new(0, 0, 0, 0)
    progressBar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    progressBar.BorderSizePixel = 0
    progressBar.Parent = progressBarBG

    local progressBarCorner = Instance.new("UICorner")
    progressBarCorner.CornerRadius = UDim.new(0.5, 0)
    progressBarCorner.Parent = progressBar

    return screenGui, container, title, progressBar
end


local function createWelcomeScreen()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "WelcomeScreen"
    screenGui.IgnoreGuiInset = true
    screenGui.ResetOnSpawn = false

    local bg = Instance.new("Frame")
    bg.Size = UDim2.new(1, 0, 1, 0)
    bg.BackgroundColor3 = Color3.fromRGB(10, 10, 15)
    bg.BackgroundTransparency = 0
    bg.Parent = screenGui

    local container = createRoundedFrame(bg, UDim2.new(0.35, 0, 0.15, 0), UDim2.new(0.325, 0, 0.43, 0), Color3.fromRGB(0, 170, 255), UDim.new(0.15, 0), true)
    container.BackgroundTransparency = 1

    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0.6, 0)
    title.Position = UDim2.new(0, 0, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = "Welcome!"
    title.Font = Enum.Font.GothamBlack
    title.TextSize = 38
    title.TextColor3 = Color3.fromRGB(245, 245, 255)
    title.TextTransparency = 1
    title.Parent = container

    local subtitle = Instance.new("TextLabel")
    subtitle.Size = UDim2.new(1, 0, 0.4, 0)
    subtitle.Position = UDim2.new(0, 0, 0.6, 0)
    subtitle.BackgroundTransparency = 1
    subtitle.Text = "Enjoy your experience."
    subtitle.Font = Enum.Font.Gotham
    subtitle.TextSize = 22
    subtitle.TextColor3 = Color3.fromRGB(230, 230, 240)
    subtitle.TextTransparency = 1
    subtitle.Parent = container

    return screenGui, container, title, subtitle
end


local function fade(obj, prop, goal, duration, style, direction)
    style = style or Enum.EasingStyle.Quad
    direction = direction or Enum.EasingDirection.Out
    local tweenInfo = TweenInfo.new(duration, style, direction)
    local tween = TweenService:Create(obj, tweenInfo, {[prop] = goal})
    tween:Play()
    return tween
end


local function main()
   
    local loadingGui, loadingContainer, loadingTitle, progressBar = createLoadingScreen()
    loadingGui.Parent = playerGui

  
    fade(loadingContainer, "BackgroundTransparency", 0, 0.6)
    fade(loadingTitle, "TextTransparency", 0, 0.6)
    wait(0.6)


    local progressTween = TweenService:Create(progressBar, TweenInfo.new(2.5, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Size = UDim2.new(1, 0, 1, 0)})
    progressTween:Play()
    progressTween.Completed:Wait()

    wait(0.3)

   
    fade(loadingTitle, "TextTransparency", 1, 0.5)
    fade(loadingContainer, "BackgroundTransparency", 1, 0.5)
    wait(0.5)
    loadingGui:Destroy()


    local welcomeGui, welcomeContainer, welcomeTitle, welcomeSubtitle = createWelcomeScreen()
    welcomeGui.Parent = playerGui


    fade(welcomeContainer, "BackgroundTransparency", 0, 0.6)
    fade(welcomeTitle, "TextTransparency", 0, 0.6)
    fade(welcomeSubtitle, "TextTransparency", 0, 0.6)
    wait(1.2)

  
    fade(welcomeTitle, "TextTransparency", 1, 0.5)
    fade(welcomeSubtitle, "TextTransparency", 1, 0.5)
    fade(welcomeContainer, "BackgroundTransparency", 1, 0.5)
    wait(0.6)
    welcomeGui:Destroy()

   
    local func, err = loadstring(LOADSTRING_CODE)
    if func then
        func()
    else
        warn("Loadstring error:", err)
    end
end

main()
